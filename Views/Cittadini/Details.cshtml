@model ComuneOnline.Models.DTOs.CittadinoDetailsDTO

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow-sm mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Nome @Model.Cognome</h4>
        <hr />
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefono:</strong> @Model.Telefono</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">⬅ Torna alla lista</a>
<a asp-action="Delete" asp-route-id="@Model.CittadinoId" class="btn btn-outline-danger mt-3">❌ Elimina</a>
